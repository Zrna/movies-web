  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --bail --onlyChanged",
    "eject": "craco eject",
    "typecheck": "tsc --noEmit --incremental false --tsBuildInfoFile null",
    "lint": "npm run typecheck && eslint '*/**/*.{js,ts,tsx,mdx}'",
